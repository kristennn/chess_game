<div class="col-md-12">
  <h5>玩家钻石记录日志</h5>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <td>日志时间</td>
        <td>用户ID</td>
        <td>桌号</td>
        <td>日志类别</td>
        <td>金额</td>
      </tr>
    </thead>
    <tbody>
        <% @playerfees.each do |playerfee| %>
          <tr>
              <td><%= @tbl_room.find_by(:table_id => "#{playerfee.table_id}").end_time.strftime("%Y/%m/%d  %H:%M:%S") %></td>
              <td><%= playerfee.userid %></td>
              <td><%= playerfee.table_id %></td>
              <td style ="font-weight:bold;color:red">房费消耗</td>
              <td>-<%= playerfee.fee%></td>
          </tr>
       <% end %>

        <% @tbl_orders.each do |tbl_order|%>
          <tr>
            <tr>
              <td><%= tbl_order.complete_time.strftime("%Y/%m/%d  %H:%M:%S") %></td>
              <td><%= tbl_order.userid %></td>
              <td>0</td>
              <td style = "font-weight:bold;color:green">充值</td>
              <td><%= tbl_order.money %></td>
            </tr>
          </tr>
        <% end %>

      </tbody>
  </table>
  <div class="text-right">
    <%= paginate @playerfees %>
    <%= paginate @tbl_orders %>
  </div>
</div>
