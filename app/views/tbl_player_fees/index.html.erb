<div class="col-md-12">
  <h5>玩家钻石记录日志</h5>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <td>日志时间</td>
        <td>用户ID</td>
        <td>桌号</td>
        <td>日志类别</td>
        <td>金额</td>
      </tr>
    </thead>
    <tbody>
        <% @playerfees.each do |playerfee| %>
        <% @tbl_orders.each do |tbl_order| %>
          <tr>
            <% if playerfee.present? %>
            <td><%= TblRoom.find_by(:table_id => "playerfee.table_id").end_time %></td>
            <td><%= playerfee.userid %></td>
            <td><%= playerfee.table_id %></td>
            <td>房费消耗</td>
            <td><%= playerfee.fee %></td>
            <% else %>
            <td><%= tbl_order.pay_time %></td>
            <td><%= tbl_order.userid %></td>
            <td>0</td>
            <td>充值</td>
            <td><%= tbl_order.money %></td>
            <% end %>
          </tr>
       <% end %>
       <% end %>
      </tbody>
  </table>
</div>
