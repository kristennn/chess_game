<div class="col-md-12">
  <h5>玩家钻石记录日志</h5>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <td>日志时间</td>
        <td>用户ID</td>
        <td>桌号</td>
        <td>日志类别</td>
        <td>金额</td>
      </tr>
    </thead>
    <tbody>
        <% @playerfees.each do |playerfee| %>
          <tr>
              <% if TblRoom.find_by(:table_id => "playerfee.table_id").present? %>
                <td><%= TblRoom.find_by(:table_id => "playerfee.table_id").end_time.strftime("%Y/%m/%d  %H:%M:%S") %></td>
              <% else %>
                <td>无</td>
              <% end %>
              <td><%= playerfee.userid %></td>
              <td><%= playerfee.table_id %></td>
              <td>房费消耗</td>
              <td><%= playerfee.fee %></td>
          </tr>
       <% end %>
      </tbody>
  </table>
</div>
