<h2>登录账户</h2>
<%= simple_form_for :session, url: login_path do |f| %>
  <%= f.input :email, label: "请输入邮箱" %>
  <%= f.input :password, label: "请输入密码" %>
  <%= f.label :remember_me, class: "checkbox inline" do %>
    <%= f.check_box :remember_me %>
    <span>记住我</span>
  <% end %>
  <%= f.submit :点击登录 %>
<% end %>
