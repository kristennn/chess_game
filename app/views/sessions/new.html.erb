<div class="col-md-12 col-xs-12">
  <h2 class="text-center">Welcome</h2>
  <%= simple_form_for :session, url: login_path do |f| %>
   <div class="form-inputs">
    <%= f.input :name, :lable => false, :error => false, placeholder: "账号", required: false, autofocus: true %>
    <%= f.input :email, :label => false, :error => false, placeholder: "邮箱", required: true %>
    <%= f.input :password, :label => false, :error => false, placeholder: "密码", required: true %>
     <div class="form-actions">
      <%= f.submit :点击登录, class:"button" %>
     </div>
    </div>
  <% end %>
</div>
